project(*idl): dcps_test_idl_only_lib {
  idlflags      += -Wb,stub_export_include=SimpleLatency_export.h \
                   -Wb,stub_export_macro=SimpleLatency_Export -SS
  dcps_ts_flags += -Wb,export_macro=SimpleLatency_Export
  dynamicflags  += SIMPLELATENCY_BUILD_DLL

  TypeSupport_Files {
    DDSPerfTest.idl
  }
}

project(DDS*Pub): dcpsexe, dcps_test {
  after  += *idl
  libs   += *idl
  exename = dds_pub
  requires += no_opendds_safety_profile

  Idl_Files {
  }

  Source_Files {
    sample_pub.cpp
    PubListener.cpp
  }
}


project(DDS*Sub): dcpsexe, dcps_test {
  after  += *idl
  libs   += *idl
  exename = dds_sub
  requires += no_opendds_safety_profile

  Idl_Files {
  }

  Source_Files {
    sample_sub.cpp
    SubListener.cpp
  }
}
