project(*Idl): dcps_test_idl_only_lib {
  requires += no_opendds_safety_profile

  idlflags      += -Wb,stub_export_include=CorbaSeq_export.h \
                   -Wb,stub_export_macro=CorbaSeq_Export
  dcps_ts_flags += -Wb,export_macro=CorbaSeq_Export
  dynamicflags  += CORBASEQ_BUILD_DLL

  TypeSupport_Files {
    Messenger.idl
    Messenger2.idl
  }
}

project(*Publisher) : dcpsexe, dcps_test, dcps_transports_for_test {
  requires += no_opendds_safety_profile

  after    += *Idl
  libs     += *Idl
  exename   = publisher

  Idl_Files {
  }

  Source_Files {
    publisher.cpp
    Writer.cpp
  }
}

project(*Subscriber) : dcpsexe, dcps_test, dcps_transports_for_test {
  requires += no_opendds_safety_profile

  after    += *Idl
  libs     += *Idl
  exename   = subscriber

  Idl_Files {
  }

  Source_Files {
    subscriber.cpp
    DataReaderListener.cpp
  }
}
